<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_parent"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/corners_item"
    android:elevation="4dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_item_recipe"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_margin="10dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/image_item_recipe"
        android:layout_toStartOf="@+id/image_item_open"
        android:gravity="center"
        android:text="Test"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_item_open"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/open" />

</RelativeLayout>